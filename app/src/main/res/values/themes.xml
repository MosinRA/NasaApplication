<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="NasaApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="chipGroupStyle">@style/chipThemeStyle</item>
        <item name="chipStyle">@style/chipWikiStyle</item>
        <item name="android:textColor">@color/backgroundGray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="chipWikiStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="closeIconTint">@color/closeIconColor</item>
        <item name="chipBackgroundColor">@color/backgroundGray</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="chipThemeStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="chipBackgroundColor">@color/backgroundGray</item>
        <item name="android:layout_margin">@dimen/margin_top_chips_vis_wiki</item>
    </style>

    <style name="Second" parent="NasaApplication">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="chipGroupStyle">@style/chipThemeStyleSecond</item>
        <item name="chipStyle">@style/chipWikiStyleSecond</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@drawable/bg_black</item>
        <item name="android:windowBackground">@drawable/bg_black</item>
    </style>

    <style name="chipWikiStyleSecond" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="closeIconTint">@color/closeIconColor</item>
        <item name="chipBackgroundColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_top_chips_vis_wiki</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/white</item>
    </style>

    <style name="chipThemeStyleSecond" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="chipBackgroundColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_top_chips_vis_wiki</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/white</item>
    </style>
</resources>